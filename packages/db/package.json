{
  "name": "@acme/db",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./prisma": {
      "types": "./dist/prisma.d.ts",
      "default": "./src/prisma.ts"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc",
    "biome:check": "biome check .",
    "biome:fix": "biome check --write .",
    "db:generate": "prisma generate",
    "db:push": "pnpm with-env prisma db push",
    "db:push:test": "pnpm with-env:test prisma db push --force-reset",
    "db:studio": "pnpm with-env prisma studio",
    "db:migrate": "pnpm with-env prisma migrate dev",
    "db:reset": "pnpm with-env prisma migrate reset",
    "db:reset:test": "pnpm with-env:test prisma migrate reset --force",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "with-env": "dotenv -e ../../.env --",
    "with-env:test": "dotenv -e ../../.env.test --"
  },
  "dependencies": {
    "@acme/logger": "workspace:*",
    "@prisma/client": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@acme/biome-config": "workspace:*",
    "@acme/tsconfig": "workspace:*",
    "@biomejs/biome": "catalog:",
    "@types/node": "^22.18.10",
    "prisma": "catalog:",
    "typescript": "catalog:"
  }
}
